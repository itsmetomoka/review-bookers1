<div class ="container">
	
	<div class="row">
		<div class="col-md-8 offset-md-2">
			<h2><strong>Books</strong></h2>
			<table class="table tabel-sm table-borderless">
				<tr><th>Title</th>
				<th>Body</th>
				<th></th></tr>
				<% @books.each do |book| %>
				<tr><td><%= book.title %></td>
					<td><%= book.body %></td>
					<td><%= link_to "Show", book_path(book.id), class: "btn btn-outline-primary" %>
					<%= link_to "delete" ,book_path(book.id), method: :delete,"data-confirm" => "R U SURE?",class: "btn btn-outline-danger" %>
						<%= link_to "Edit", edit_book_path(book.id),class: "btn btn-outline-info" %>
				</td></tr>
				<% end %>
			</table>
		</div>
		<div class="col-md-8 offset-md-2">
			<h2><strong>New Book</strong></h2>
			<% if @book.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h4>
    </div>
  <% end %>
			<%=form_for(@book) do |f| %>
				<p><p>title</p>
				<%= f.text_field :title %></p>
				<% if @book.errors.include?(:title) %>
      <p style="color: red;"><%= @book.errors.full_messages_for(:title).first %>
     <% end %>
				<p><p>body</p>
				<%= f.text_area :body %></p>
				<% if @book.errors.include?(:body) %>
       <p style="color: red;"><%= @book.errors.full_messages_for(:body).first %>
     <% end %>
				<p>
				<button class="btn btn-primary"type="submit">create</button>
				</p>
			<% end %>
		</div>
	</div>
</div>